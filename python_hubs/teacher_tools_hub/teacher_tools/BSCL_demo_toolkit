  <script>
    // ==========================
    // BOOMER-PROOF CORE HELPERS
    // ==========================
    const $ = (s, el=document)=> el.querySelector(s);
    const $$ = (s, el=document)=> Array.from(el.querySelectorAll(s));

    const store = {
      get(k, fallback){
        try{
          const v = localStorage.getItem(k);
          return v ? JSON.parse(v) : fallback;
        }catch(e){ return fallback; }
      },
      set(k,v){
        try{ localStorage.setItem(k, JSON.stringify(v)); }catch(e){}
      }
    };

    function toast(msg){
      const t = $("#toast");
      t.textContent = msg;
      t.style.display = "block";
      clearTimeout(toast._t);
      toast._t = setTimeout(()=> t.style.display="none", 1600);
    }

    // ==========================
    // TAB SYSTEM (NO SCROLL)
    // ==========================
    const TOOLS = [
      { id:"t-paint",  label:"ðŸŽ¨ Paint",   title:"Three-Color Touch Paint", hint:"Touch test + save/clear. Three colors only." },
      { id:"t-timer",  label:"â±ï¸ Timer",   title:"Station Timer",            hint:"Big display. Start/pause/reset." },
      { id:"t-exit",   label:"ðŸ§¾ Exit",    title:"Exit Ticket Builder",      hint:"Build + copy a clean block." },
      { id:"t-picker", label:"ðŸŽ² Picker",  title:"Name Picker",             hint:"Paste roster â†’ pick randomly." },
      { id:"t-tally",  label:"âœ… Tally",   title:"L.E.A.D. Tally Counter",   hint:"Fast tap counters. Autosaves." },
    ];

    const tabs = $("#tabs");
    TOOLS.forEach(t=>{
      const b = document.createElement("button");
      b.className = "tabbtn";
      b.textContent = t.label;
      b.dataset.id = t.id;
      b.addEventListener("click", ()=> setActive(t.id));
      tabs.appendChild(b);
    });

    function setHeader(toolId){
      const t = TOOLS.find(x=>x.id===toolId);
      $("#toolTitle").textContent = t ? t.title : "Tool";
      $("#toolHint").textContent = t ? t.hint : "";
    }

    function setActive(toolId){
      store.set("lead_active_tab", toolId);
      $$(".tabbtn").forEach(b=> b.classList.toggle("active", b.dataset.id===toolId));
      $$(".tool").forEach(sec=> sec.classList.toggle("active", sec.id===toolId));
      setHeader(toolId);
      $("#statusLine").textContent = "Ready";
      $("#subLine").textContent = "No logins â€¢ no accounts";
    }

    setActive(store.get("lead_active_tab", "t-paint"));

    // ==========================
    // TOOL 1: PAINT (3 colors)
    // ==========================
    const canvas = $("#paintCanvas");
    const ctx = canvas.getContext("2d", { alpha:false });

    // Fit canvas to element size, fixed height (no scroll)
    function resizeCanvas(){
      const w = canvas.clientWidth;
      const h = canvas.clientHeight;
      const dpr = Math.max(1, window.devicePixelRatio || 1);
      canvas.width = Math.floor(w * dpr);
      canvas.height = Math.floor(h * dpr);
      ctx.setTransform(dpr,0,0,dpr,0,0); // draw in CSS pixels
      // white background
      ctx.fillStyle="#ffffff";
      ctx.fillRect(0,0,w,h);
      // restore saved
      const saved = store.get("lead_paint_png", null);
      if(saved){
        const img = new Image();
        img.onload = ()=> {
          ctx.drawImage(img, 0, 0, w, h);
        };
        img.src = saved;
        $("#paintSavedAt").textContent = store.get("lead_paint_saved_at", "â€”");
      }
    }

    window.addEventListener("resize", ()=>{ resizeCanvas(); });
    // small delay so layout is stable
    setTimeout(resizeCanvas, 50);

    let drawing=false;
    let last=null;
    let color="#0b2a5b";
    let size=10;

    function setColorButtons(activeId){
      ["cBlue","cGold","cWhite"].forEach(id=>{
        $("#"+id).classList.toggle("active", id===activeId);
      });
    }

    function pos(e){
      const rect = canvas.getBoundingClientRect();
      const t = e.touches ? e.touches[0] : null;
      const x = (t ? t.clientX : e.clientX) - rect.left;
      const y = (t ? t.clientY : e.clientY) - rect.top;
      return {x,y};
    }

    function line(a,b){
      ctx.lineCap="round";
      ctx.lineJoin="round";
      ctx.lineWidth=size;
      ctx.strokeStyle=color;
      ctx.beginPath();
      ctx.moveTo(a.x,a.y);
      ctx.lineTo(b.x,b.y);
      ctx.stroke();
    }

    function start(e){
      drawing=true;
      last=pos(e);
      e.preventDefault();
    }
    function move(e){
      if(!drawing) return;
      const p=pos(e);
      line(last,p);
      last=p;
      e.preventDefault();
    }
    function end(e){
      drawing=false;
      last=null;
      e && e.preventDefault && e.preventDefault();
    }

    canvas.addEventListener("mousedown", start);
    canvas.addEventListener("mousemove", move);
    window.addEventListener("mouseup", end);

    canvas.addEventListener("touchstart", start, {passive:false});
    canvas.addEventListener("touchmove", move, {passive:false});
    canvas.addEventListener("touchend", end, {passive:false});

    $("#cBlue").addEventListener("click", ()=>{ color="#0b2a5b"; setColorButtons("cBlue"); toast("Blue selected"); });
    $("#cGold").addEventListener("click", ()=>{ color="#f2c94c"; setColorButtons("cGold"); toast("Gold selected"); });
    $("#cWhite").addEventListener("click", ()=>{ color="#ffffff"; setColorButtons("cWhite"); toast("White selected"); });

    $("#brushSize").addEventListener("change", (e)=>{
      size = parseInt(e.target.value,10) || 10;
      toast("Brush size set");
    });

    $("#paintClear").addEventListener("click", ()=>{
      const w = canvas.clientWidth, h = canvas.clientHeight;
      ctx.fillStyle="#ffffff"; ctx.fillRect(0,0,w,h);
      store.set("lead_paint_png", null);
      store.set("lead_paint_saved_at", "â€”");
      $("#paintSavedAt").textContent="â€”";
      toast("Canvas cleared");
    });

    $("#paintSave").addEventListener("click", ()=>{
      // save normalized to current size
      const w = canvas.clientWidth, h = canvas.clientHeight;
      const temp = document.createElement("canvas");
      temp.width = w; temp.height = h;
      const tctx = temp.getContext("2d");
      tctx.fillStyle="#fff"; tctx.fillRect(0,0,w,h);
      // draw current canvas into temp at CSS scale
      tctx.drawImage(canvas, 0,0, canvas.width, canvas.height, 0,0, w,h);
      const png = temp.toDataURL("image/png");
      store.set("lead_paint_png", png);
      const stamp = new Date().toLocaleString();
      store.set("lead_paint_saved_at", stamp);
      $("#paintSavedAt").textContent = stamp;
      toast("Saved âœ“");
    });

    // ==========================
    // TOOL 2: TIMER
    // ==========================
    let timerInt=null;
    let remaining = store.get("lead_timer_remaining", 10*60);

    function fmt(s){
      const m = Math.floor(s/60);
      const r = s%60;
      return String(m).padStart(2,"0")+":"+String(r).padStart(2,"0");
    }
    function renderTimer(){
      $("#timerDisplay").textContent = fmt(remaining);
      store.set("lead_timer_remaining", remaining);
    }
    function setMinutes(min){
      remaining = Math.max(1, min)*60;
      renderTimer();
      $("#timerState").textContent = "Ready";
    }

    $("#timerMinutes").addEventListener("change", (e)=>{
      setMinutes(parseInt(e.target.value,10) || 10);
      toast("Timer set");
    });

    // init from dropdown value
    setMinutes(parseInt($("#timerMinutes").value,10) || 10);
    // but if saved value exists, restore it
    if(typeof remaining === "number" && remaining > 0){
      renderTimer();
    }

    $("#timerStart").addEventListener("click", ()=>{
      if(timerInt) return;
      $("#timerState").textContent = "Running";
      timerInt = setInterval(()=>{
        remaining = Math.max(0, remaining-1);
        renderTimer();
        if(remaining === 0){
          clearInterval(timerInt); timerInt=null;
          $("#timerState").textContent = "Done âœ“";
          toast("Timer done");
        }
      }, 1000);
    });

    $("#timerPause").addEventListener("click", ()=>{
      if(timerInt){
        clearInterval(timerInt); timerInt=null;
        $("#timerState").textContent = "Paused";
        toast("Paused");
      }
    });

    $("#timerReset").addEventListener("click", ()=>{
      if(timerInt){ clearInterval(timerInt); timerInt=null; }
      setMinutes(parseInt($("#timerMinutes").value,10) || 10);
      toast("Reset");
    });

    // ==========================
    // TOOL 3: EXIT TICKET
    // ==========================
    const exit = {
      topic: $("#exitTopic"),
      p1: $("#exitP1"),
      p2: $("#exitP2"),
      p3: $("#exitP3"),
      preview: $("#exitPreview"),
    };

    // restore inputs
    exit.topic.value = store.get("lead_exit_topic","");
    exit.p1.value = store.get("lead_exit_p1","");
    exit.p2.value = store.get("lead_exit_p2","");
    exit.p3.value = store.get("lead_exit_p3","");
    exit.preview.textContent = store.get("lead_exit_preview","");

    function saveExitInputs(){
      store.set("lead_exit_topic", exit.topic.value);
      store.set("lead_exit_p1", exit.p1.value);
      store.set("lead_exit_p2", exit.p2.value);
      store.set("lead_exit_p3", exit.p3.value);
    }
    [exit.topic, exit.p1, exit.p2, exit.p3].forEach(el=>{
      el.addEventListener("input", saveExitInputs);
    });

    function buildExit(){
      const dateStr = new Date().toLocaleDateString();
      const topic = exit.topic.value.trim();
      const p1 = (exit.p1.value.trim() || "One key idea you learned today isâ€¦");
      const p2 = (exit.p2.value.trim() || "A question I still have isâ€¦");
      const p3 = exit.p3.value.trim();

      let out = "W.L.E.A.D. EXIT TICKET\n";
      out += "Date: " + dateStr + "\n";
      if(topic) out += "Topic: " + topic + "\n";
      out += "\n1) " + p1 + "\n   ________________________________\n";
      out += "\n2) " + p2 + "\n   ________________________________\n";
      if(p3){
        out += "\n3) " + p3 + "\n   ________________________________\n";
      }
      out += "\nâ€” We are L.E.A.Ders â€¢ Teacher First â€”";

      // preview is scroll-free: keep it short if needed
      const MAX = 900;
      exit.preview.textContent = out.length > MAX ? out.slice(0, MAX) + "\n\n[Preview trimmed]" : out;

      store.set("lead_exit_preview", out);
      toast("Built âœ“");
    }

    $("#exitBuild").addEventListener("click", buildExit);

    $("#exitCopy").addEventListener("click", async ()=>{
      const txt = store.get("lead_exit_preview","") || exit.preview.textContent || "";
      if(!txt){ buildExit(); }
      const finalTxt = store.get("lead_exit_preview","") || exit.preview.textContent || "";
      try{
        await navigator.clipboard.writeText(finalTxt);
        toast("Copied âœ“");
      }catch(e){
        toast("Copy blocked by browser");
      }
    });

    $("#exitClear").addEventListener("click", ()=>{
      exit.topic.value = "";
      exit.p1.value = "";
      exit.p2.value = "";
      exit.p3.value = "";
      exit.preview.textContent = "";
      store.set("lead_exit_topic","");
      store.set("lead_exit_p1","");
      store.set("lead_exit_p2","");
      store.set("lead_exit_p3","");
      store.set("lead_exit_preview","");
      toast("Cleared");
    });

    // ==========================
    // TOOL 4: PICKER
    // ==========================
    const roster = $("#roster");
    roster.value = store.get("lead_roster", "");
    roster.addEvent
    roster.addEventListener("input", ()=> store.set("lead_roster", roster.value));

    function rosterList(){
      return roster.value.split(/\r?\n/).map(s=>s.trim()).filter(Boolean);
    }

    $("#pick").addEventListener("click", ()=>{
      const list = rosterList();
      if(!list.length){
        $("#pickResult").textContent = "â€”";
        $("#pickMeta").textContent = "Paste names first";
        toast("Add a roster");
        return;
      }
      const name = list[Math.floor(Math.random()*list.length)];
      $("#pickResult").textContent = name;
      $("#pickMeta").textContent = `Picked from ${list.length} names`;
      store.set("lead_last_pick", name);
      toast("Picked âœ“");
    });

    $("#shuffle").addEventListener("click", ()=>{
      const list = rosterList();
      if(!list.length){ toast("Nothing to shuffle"); return; }
      for(let i=list.length-1;i>0;i--){
        const j = Math.floor(Math.random()*(i+1));
        [list[i], list[j]] = [list[j], list[i]];
      }
      roster.value = list.join("\n");
      store.set("lead_roster", roster.value);
      $("#pickMeta").textContent = "Shuffled âœ“";
      toast("Shuffled âœ“");
    });

    $("#rosterClear").addEventListener("click", ()=>{
      roster.value = "";
      store.set("lead_roster","");
      $("#pickResult").textContent = "â€”";
      $("#pickMeta").textContent = "Cleared";
      toast("Cleared");
    });

    const lastPick = store.get("lead_last_pick","");
    if(lastPick){
      $("#pickResult").textContent = lastPick;
      $("#pickMeta").textContent = "Restored last pick";
    }

    // ==========================
    // TOOL 5: TALLY
    // ==========================
    const tally = store.get("lead_tally", {s:0,l:0,e:0,r:0});
    function renderTally(){
      $("#ts").textContent = tally.s;
      $("#tl").textContent = tally.l;
      $("#te").textContent = tally.e;
      $("#tr").textContent = tally.r;
      store.set("lead_tally", tally);
    }
    renderTally();

    $$("[data-t]").forEach(btn=>{
      btn.addEventListener("click", ()=>{
        const k = btn.dataset.t;
        const d = parseInt(btn.dataset.d,10) || 0;
        tally[k] = Math.max(0, (tally[k]||0)+d);
        renderTally();
        $("#tNote").textContent = "Saved âœ“";
        toast("Saved âœ“");
      });
    });

    $("#tReset").addEventListener("click", ()=>{
      tally.s=tally.l=tally.e=tally.r=0;
      renderTally();
      $("#tNote").textContent = "Reset âœ“";
      toast("Reset âœ“");
    });

    $("#tCopy").addEventListener("click", async ()=>{
      const txt =
`W.L.E.A.D. TALLY
Safety: ${tally.s}
Learning: ${tally.l}
Earn: ${tally.e}
Do Right Thing: ${tally.r}`;
      try{
        await navigator.clipboard.writeText(txt);
        toast("Copied âœ“");
      }catch(e){
        toast("Copy blocked by browser");
      }
    });
  </script>
</body>
</html>
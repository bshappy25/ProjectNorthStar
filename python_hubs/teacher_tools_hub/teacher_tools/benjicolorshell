  <script>
    const modal = document.getElementById("modal");
    const openMain = () => modal.classList.add("active");
    const closeMain = () => modal.classList.remove("active");

    document.getElementById("comingSoonBtn").addEventListener("click", openMain);
    document.getElementById("okBtn").addEventListener("click", closeMain);
    document.getElementById("closeBtn").addEventListener("click", closeMain);
    modal.addEventListener("click", (e) => { if (e.target === modal) closeMain(); });

    const promoModal = document.getElementById("promoModal");
    const openPromo = () => promoModal.classList.add("active");
    const closePromo = () => promoModal.classList.remove("active");

    document.getElementById("promoInfoBtn").addEventListener("click", openPromo);
    document.getElementById("promoCloseBtn").addEventListener("click", closePromo);
    promoModal.addEventListener("click", (e) => { if (e.target === promoModal) closePromo(); });

    window.addEventListener("keydown", (e) => {
      if (e.key === "Escape") { closeMain(); closePromo(); }
    });
  </script>
